{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "XS",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.xs",
				"match": "//.*\n"
			},
			{
				"name": "comment.line.double-slash.xs",
				"match": "/\\*.*\\**/"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.xs",
				"match": "\\b(false|true)\\b"
			},
			{
				"name": "constant.numeric.xs",
				"match": "-?[0-9]+(?:\\.[0-9]+)?"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.xs",
				"match": "\\b(if|else|while|for|return)\\b"
			},
			{
				"name": "keyword.other.xs",
				"match": "\\b(include|int|float|string|void)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.xs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.xs",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.xs"
}